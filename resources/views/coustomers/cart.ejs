<section class="cart py-16">
<% if(session.cart) {%>
 <div class="container oreder mx-auto w-1/2">
    <div class="flex item-cneter border-b border-gray-300 pb-4">
     <img src="/img/img/cart-black.png" alt="">
     <h1 class="font-bold ml text-2xl">Oreder summary</h1>
    
    </div>
    <div class="pizza-list">
     <% for(let pizza of Object.values(session.cart.items)){%>
     <div class="flex items-center my-8">
    
         <img class ="w-24 "src="/img/img/<%= pizza.item.image%>" alt="">
         <div class="flex-1 ml-4">
         <h1><%= pizza.item.name%></h1>
         <span><%= pizza.item.size%></span>
         </div>
         <span class="flex-1 "><%= pizza.qty%> Pcs </span>
         <span class="font-bold text-lg ">Rs <%= pizza.item.price * pizza.qty%></span>
   
     </div>

     <% } %>



 

  <div class="text-right py-4">
  
    <div>
      <span class="text-lg font-bold ">Total Amount :</span>
       <span class="amount text-2xl font-bold ml-2">Rs <%= session.cart.totalPrice%></span>
    </div>

   <div class="">
     <form action="" class="mb-4">
      <input type="text" class="border border-gray-400 p-2 w-1/2 my-4" placeholder="Phone Number">
      <input type="text" class="border border-gray-400 p-2 w-1/2 " placeholder="Address">
  <!--   <div>
          <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order Now</button>
      </div>--> 
     </form>
   </div>

  <a href="" class="inline-block cursor-pointer  px-6 btn-primary py-2 rounded-full text-white font-bold mt-6">Login To Continue</a>
  </div>
 </div>

<% }else {%>


<div class="empty-cart py-16">
     <div class="container mx-auto text-center ">
            <h1 class="text-3xl font-bold mb-2 ">Cart Empty</h1>
         <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.
           <br> To order a pizza , go to the main page.
        </p>
         <img class="w-2/5 mx-auto" src="/img/img/empty-cart.png" alt="">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
      </div>
  </div> 
  <%}%>
 </section>